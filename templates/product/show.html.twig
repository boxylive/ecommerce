{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <div class="md:grid grid-cols-3 gap-16">
        <div class="col-span-1">
            <img class="mx-auto rounded-lg mb-2" src="{{ product.image }}" alt="{{ product.name }}">
        </div>
        <div class="col-span-2">
            <h1 class="text-2xl font-medium text-gray-900 mb-10">{{ product.name }}</h1>
            <div class="desc text-sm text-gray-500 mb-10">
                {{ product.description }}
            </div>
            <p class="font-medium text-gray-900">
                {{ product.price | price(20) | format_currency('EUR') }} TTC
            </p>
        </div>
    </div>
{% endblock %}
